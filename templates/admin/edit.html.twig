          <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="{{ path('app_admin') }}" data-toggle="tab">Update</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('admin_create') }}" data-toggle="tab">Add Courses</a></li>
