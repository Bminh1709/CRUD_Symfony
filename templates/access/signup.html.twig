<body class="login-page" style="background-color:#f0f1f3;">
    

<div class="thisIsLoginAdmin">
<div class="login-box">
  <div class="login-logo">
    <img class="loginad-img" src="{{ asset('images/logo_transparent.png') }}" alt="">
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign up to be a member of our center</p>


      {{ form_start(form) }}

        <!-- LAST NAME AND FIRST NAME -->
        <div class="input-group mb-3">
                {{ form_widget(form.firstname,{
                        'attr':{
                            'class':'form-control',
                            'placeholder': 'First Name',
                            'style': 'margin-right: 7px; border-radius: 7px;'
                        }
                }) }}
                {{ form_widget(form.lastname,{
                        'attr':{
                            'class':'form-control',
                            'placeholder': 'Last Name',
                            'style': 'margin-left:7px; border-radius:7px;'
                        }
                }) }}
        </div>

        <!-- EMAIL -->
        <div class="input-group mb-3">
            {{ form_widget(form.gmail,{
                        'attr':{
                            'class':'form-control',
                            'placeholder': 'Gmail'
                        }
            }) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>

        <!-- PASSWORD -->
        <div class="input-group mb-3">
            {{ form_widget(form.pass,{
                        'attr':{
                            'class':'form-control',
                            'placeholder': 'Password'
                        }
            }) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <!-- PHONE NUMBER -->
        <div class="input-group mb-3">
            {{ form_widget(form.phone,{
                        'attr':{
                            'class':'form-control',
                            'placeholder': 'Phone Number'
                        }
            }) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-phone"></span>
            </div>
          </div>
        </div>


        <!-- GENDER -->
        <div class="input-group mb-3">
            {{ form_widget(form.gender, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Select gender',
                }
            }) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fa-solid fa-venus-mars"></span>
            </div>
          </div>
        </div>



        <div class="row" style="margin-top:20px;">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" name="remember" id="remember">
              <label for="remember" style="color:#fff;">
                Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <input type="submit" name="btn-us-signup" class="btn btn-primary btn-block" value="Sign Up"/>
          </div>
          <!-- /.col -->
        </div>
        

      {{ form_end(form) }}


        




    </div>
    <!-- /.login-card-body -->
  </div>
