<body class="login-page" style="background-color:#f0f1f3;">
    
<div class="thisIsLoginAdmin">
<div class="login-box">
  <div class="login-logo">
    <img class="loginad-img" src="{{ asset('images/logo_transparent.png') }}" alt="">
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>
      <!-- enctype="multipart/form-data" -->
      <form action="{{ path('check-login') }}" method="post" name="frmLogin" onsubmit="return checkLogin();">
        <div class="input-group mb-3">
          <input type="email" name="gmail" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" name="pass" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" name="remember" id="remember">
              <label for="remember" style="color:#fff;">
                Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" name="btn-ad-login" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>


    </form>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div style="margin-bottom:0; margin-top:10px;" class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
          {% endfor %}


    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->
</div>


</body>
